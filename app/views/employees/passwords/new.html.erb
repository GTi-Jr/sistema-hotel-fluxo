<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'login-form-signin'}) do |f| %>
<div class="login-logo"><img src="../images/logo.png"></div>

<h2 class="login-form-signin-heading">ESQUECEU SUA SENHA?</h2>


<div class="login-wrap">
   <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email' %>
   <label class="checkbox">
   <span class="pull-right">
   <%= render "employees/shared/links" %>
   </span>
   </label>
   <button type="submit" class="btn btn-lg btn-primary btn-block">RECUPERAR SENHA</button>
   <%= devise_error_messages! %>
</div>
<% end %>

