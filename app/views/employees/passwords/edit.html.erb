<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,class: 'login-form-signin' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
<div class="login-logo"><img src="../images/logo.png"></div>

<h2 class="login-form-signin-heading">TROQUE SUA SENHA</h2>


<div class="login-wrap">
   <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: 'Senha'%>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Confirmar Senha'%>
   <label class="checkbox">
   <span class="pull-right">
   <%= render "employees/shared/links" %>
   </span>
   </label>
   <button type="submit" class="btn btn-lg btn-primary btn-block">TROCAR SENHA</button>
   <%= devise_error_messages! %>
</div>
<% end %>


