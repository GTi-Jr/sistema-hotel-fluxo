
<div class="row">

  <div class="col-md-12">
    <div class="page-heading">
      <h1>Funcionários <small>Listar Funcionários</small></h1>
    </div>
  </div>

  <div class="col-md-12">
    <!--box-info start-->
    <div class="box-info">
      <h4>Funcionários Cadastrados</h4>
      <hr>
      <!--adv-table start-->
      <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
         <thead>
          <tr>
           <th>NOME</th>
           <th>EMAIL</th>
           <th>SETOR</th>
           <th>DEPARTAMENTO</th>
           <th>TIPO</th>
           <th>EDITAR</th>
         </tr>
       </thead>
       <tbody>
       <% @admin_employees.each do |admin_employee| %>
        <tr class="gradeX">
         <td><%= admin_employee.name %></td>
         <td><%= admin_employee.email %> </td>
         <td><%= admin_employee.sector.name %></td>
         <td><%= admin_employee.department.name %></td>
         <td><%= admin_employee.admin ? 'Administrador' : 'Comum' %></td>
         <td> 
         <%= link_to '<button  class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i> </button>'.html_safe, edit_admin_employee_path(admin_employee)%>
         <%= link_to '<button class="btn btn-xs btn-danger"><i class="fa fa-times"></i> </button>'.html_safe, admin_employee_path(admin_employee), method: :delete, data: { confirm: 'Você tem certeza?' } %>
         </td>
        </tr>
                              
       <% end %>
     </tbody>
   </table>
 </div>
</div><!--box-info end-->
</div><!--col-md-12 end-->

</div>
